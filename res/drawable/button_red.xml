<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/border" android:color="@color/RedButtonBorder" />
            <solid android:color="@color/RedGradientStart" />
            <corners android:radius="@dimen/button_rounding" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/border" android:color="@color/RedButtonBorder" />
            <solid android:color="@color/RedGradientEnd" />
            <corners android:radius="@dimen/button_rounding" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/border" android:color="@color/RedButtonBorder" />
            <gradient android:startColor="@color/RedGradientStart" android:endColor="@color/RedGradientEnd" android:angle="90.0" />
            <corners android:radius="@dimen/button_rounding" />
        </shape>
    </item>
</selector>