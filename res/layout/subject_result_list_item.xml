<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/subjectResultRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:padding="@dimen/common_padding" >

    <com.V4Creations.vtulife.view.customviews.CustomeTextView
        android:id="@+id/subjectTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/normal_view_padding"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black" />

    <com.V4Creations.vtulife.view.customviews.CustomeTextView
        android:id="@+id/externalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subjectTextView"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/text_muted"
        app:isItalic="true" />

    <com.V4Creations.vtulife.view.customviews.CustomeTextView
        android:id="@+id/internalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subjectTextView"
        android:layout_marginLeft="@dimen/common_padding"
        android:layout_toRightOf="@id/externalTextView"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/text_muted"
        app:isItalic="true" />

    <com.V4Creations.vtulife.view.customviews.CustomeTextView
        android:id="@+id/subjectResultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/subjectTextView"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        app:isItalic="true" />

    <com.V4Creations.vtulife.view.customviews.CustomeTextView
        android:id="@+id/subjectTotalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subjectTextView"
        android:layout_marginRight="@dimen/common_padding"
        android:layout_toLeftOf="@id/subjectResultTextView"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        app:isItalic="true" />

</RelativeLayout>