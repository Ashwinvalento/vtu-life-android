<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.V4Creations.vtulife"
    android:installLocation="auto"
    android:versionCode="3200"
    android:versionName="2.8.1" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission
        android:name="com.V4Creations.vtulife.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.V4Creations.vtulife.permission.C2D_MESSAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Vtulife" >
        <activity
            android:name="com.V4Creations.vtulife.ui.VTULifeLoadingScreenActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Sherlock.Light.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
        <activity
            android:name="com.V4Creations.vtulife.ui.VTULifeMainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:logo="@drawable/mondobar_icon_launcher"
            android:screenOrientation="portrait" >

            <!-- android:uiOptions="splitActionBarWhenNarrow" android:configChanges="orientation|screenSize" -->
        </activity>
        <activity
            android:name="com.ipaulpro.afilechooser.FileChooserActivity"
            android:exported="false"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.GET_CONTENT" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.OPENABLE" />

                <data android:mimeType="*/*" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.V4Creations.vtulife.ui.VTULifePreferencesSherlockActivity"
            android:label="Preferences"
            android:logo="@drawable/icon_settings"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.V4Creations.vtulife.ui.VTULifeNotificationSherlockListActivity"
            android:label="Notifications"
            android:logo="@drawable/notification"
            android:screenOrientation="portrait" >
        </activity>

        <receiver
            android:name="com.V4Creations.vtulife.gcm.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.V4Creations.vtulife" />
            </intent-filter>
        </receiver>

        <service android:name="com.V4Creations.vtulife.gcm.GcmIntentService" />
    </application>

</manifest>